<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>

<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>종합예제</title>
</head>
<body>
<h3>JSTL 종합예제</h3>
<hr>
    <h3>set, out</h3>
    <c:set var="product1" value="<b>애플 이어폰</b>" />
    <c:set var="product2" value="삼성 갤럭시 노트" />
     <c:set var="intArray" value="${[1,2,3,4,5]}" />

    <p>
    product[jstl]:
    <c:out value="${product1}" default="Not register" escapeXml="true" />
    </p>
    
    <h3>EL </h3>
    <p>product1[e]:${product1}</p>
    <p>intArray[2]:${intArray[2]}</p>
    
    
    <h3>forEach: 배열 출력</h3>
	<ul>
    <c:forEach var="num" varStatus="i" items="${intArray}">
        <li>${i.index}: ${num}</li>
    </c:forEach>
	</ul>
	
	<h3>if</h3>
		<c:set var="checkout" value="true" />
		<c:if test="${checkout}">
		    <p>주문제품: ${product2}</p> 
		</c:if>
		<c:if test="${!checkout}">
		    <p>주문제품이 아님</p> 
		</c:if>
 
 	<h3>choose, when, otherwise</h3>
 	<c:choose>
 		<c:when test="${checkout}">
 			<p>주문제품: ${product2}</p>
 		</c:when>
 		<c:otherwise>
 			<p>주문제품이 아님!</p>
 		</c:otherwise>
 	</c:choose>
</body>
</html>
